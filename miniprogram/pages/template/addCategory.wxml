<template name="add">
  <view>
    <modal title="分类" confirm-text="确认" cancel-text="取消" hidden="{{addtellHidden}}" bindconfirm="modalConfirm" bindcancel="modalCancel">
      <label>
        <view class="tellsection">
          <input name="categoryName" bindinput="bindNameInput" disabled="{{opttype == 'edit'}}" placeholder="分类名称" value="{{categoryName}}" auto-focus/>
          <input name="categoryCount" bindinput="bindCountInput" type="number" placeholder="消费次数" value="{{categoryCount}}" /> 
        </view>
      </label>
    </modal>
  </view>
</template>